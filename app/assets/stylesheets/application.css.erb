/** Radio buttons **/
/******************/
.rd-btn { clear: both; }
.rd-btn label {
	margin-bottom: 0;
	color: #999;
	width: 150px;
	border-radius: 3px;
	border: 1px solid #D1D3D4
}
input.radio{ margin: 0;}
/* hide input */
input.radio:empty {	margin-left: -999px;}
input.radio:empty ~ label {
	position: relative;
	float: left;
	line-height: 2em;
	text-indent: 3.25em;
	cursor: pointer;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
}
input.radio:empty ~ label:before {
	position: absolute;
	display: block;
	top: 0;
	bottom: 0;
	left: 0;
	content: '';
	width: 2.5em;
	background: #D1D3D4;
	border-radius: 3px 0 0 3px;
}
input.radio:hover:not(:checked) ~ label:before {
	content:'\2714';
	text-indent: .9em;
	color: #C2C2C2;
}
input.radio:hover:not(:checked) ~ label { color: #888; }
input.radio:checked ~ label:before {
	content:'\2714';
	text-indent: .9em;
	color: #9CE2AE;
	color: #c2d1a5;
	color: #d9ded1;
	background-color: #4DCB6D;
	background-color: #9bd12e;
}
input.radio:checked ~ label { color: #777; }
input.radio:focus ~ label:before { box-shadow: 0 0 0 3px #999; }


/**media Queries**/
@media print {
	.nav, .footer, .print, .redesign-head, .ph, .accordion .fa, #bpmn{
		display: none;
	}
	.accordion-body, .accordion-row{
		display: block !important;
		height: auto !important;
	}
	.table td{
		font-size: 12px;
	}
	.accordion-row td, .accordion-row th{
		font-size: 8px !important;
	}
	.accordion-row{
		display: table-row !important;
	}
	.accordion{
		border-radius: 0 !important;
		background-color: #ddd !important;
		border-color: #999 !important;
		-webkit-print-color-adjust: exact;
	}
	.accordion-body{
		border-color: #999 !important;
	}
}
