<% if user_signed_in? %>
<!--welcome user_signed_in -->
<div class="welcome">
  <div class="container">
    <h1 class="text-head">¡Bienvenid@ <%= current_user.name %>!</h1><br>
    <p><b>MAPS.</b> Es un método para aligerar procesos de software mediante la optimización en la selección de pŕacticas de Ingeniería de Software. Las prácticas utilizadas en esta aplicación pertenecen al área de proceso de Planificación de Proyecto.</p>
    <ul>
      <li>
        Para comenzar a utilizar el método ve a
        <button type="button" name="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#modalInterface"  >
          Iniciar método
          <i class="fa fa-caret-right" aria-hidden="true"></i>
        </button>
        donde verás las instrucciones para la identificación de prácticas.
      </li>
      <li>
        Para conocer más sobre el funcionamiento del método visita el enlace: <%= link_to "Acerca del método", about_path %>.
      </li>
    </ul>
    </div>
  </div>
  <!--welcome ends-->

  <% else %>

  <!-- banner starts -->
  <section class="banner">
    <div class="container">
      <div class="row">
        <div class="col-md-12 banner-text text-center">
          <h2>MAPS - Método para Aligerar <br> Procesos de Software </h2>
          <p>Utilizando técnicas Lean y prácticas ágiles</p>
          <a data-toggle="modal" data-target="#modalRegister" href="">
            Regístrate
          </a>
        </div>
      </div>
    </div>
  </section>
  <!--  banner ends -->
<% end %>
  <!--quote section-->
  <div id="quote-desc">
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10 col-md-offset-1 desc-text">
          <p class="text-center"><span>"</span>Perfection is achieved, not when there is nothing more to add, but when there is nothing left to take away.<span>"</span></p>
        </div>
        <div class="col-md-12 desc-author">
          <p class="text-center">Antoine de Saint-Exupery</p>
        </div>
      </div>
    </div>
  </div>
  <!--quote ends-->




  <!-- interfaz indentificación de prácticas -->

  <div id="modalInterface" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
          <div class="text-head-interface">
            Funcionamiento de la interfaz para la identificación de prácticas:
          </div>
        </div>
        <div class="modal-body">
          <div class="container-modal">
            <div class="text-center">
              <%= image_tag('interface_questions', width: '1050')  %>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" id="start-survey" >Comenzar cuestionario</button>
        <div class="loading">
          <i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
          <span class="sr-only">Loading...</span>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- Login ends -->
