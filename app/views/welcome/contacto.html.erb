<!--contact starts-->
<div id="contact" class="section-padding">
    <div class="container">
        <div class="col-md-12 text-head">
                    <h2 class="text-center">Contact Us</h2>
                </div>
            <div class="col-sm-6 col-md-6 text-contact">
                <div class="col-md-12">
                        <form role="form">
                            <h3 class="text-left">Get In Touch</h3>
                            <div class="form-group">
                              <label for="text">Name:</label>
                              <input type="email" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                              <label for="email">Email:</label>
                              <input type="email" class="form-control" id="pwd">
                            </div>
                            <div class="form-group">
                              <label for="message">Message:</label>
                              <textarea type="password" class="form-control" id="pwd"></textarea>
                            </div>
                            <div class="checkbox">
                              <label><input type="checkbox"> Remember me</label>
                            </div>
                            <button type="submit" class="btn btn-default">Submit</button>
                        </form>
                </div>
            </div>
            <div class="col-sm-6 col-md-6">
                <div class="col-md-12  text-address">
                    <h3 class="text-left">Address</h3>
                </div>
                <div class="col-md-12 text-left small-address">
                    <div id="map-canvas"></div>
                    <p><i class="fa fa-university"></i> Centro de Investigación en Matemáticas, Unidad Zacatecas</p>
                    <p><i class="fa fa-map-marker"></i> Av. Universidad No. 222, 98068 Guadalupe, Zacatecas, México </p>
                    <p><i class="fa fa-envelope-o"></i>
                       <%= link_to "juan.miramontes@cimat.mx", "mailto:juan.miramontes@cimat.mx" %> |
                       <%= link_to "mirna.munoz@cimat.mx", "mailto:mirna.munoz@cimat.mx" %>
                     </p>
                </div>
            </div>
    </div>
</div>
<!--contact ends-->
