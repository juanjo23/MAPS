<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-building fa-fw"></i></span>
    <%= f.text_field :name, autofocus: true, class: 'form-control', :placeholder => 'Nombre' %>
  </div>

  <!-- Descripción -->
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-file-text fa-fw"></i></span>
    <%= f.text_area :description, class: 'form-control', :placeholder => 'Descripción...' %>
  </div>

  <!-- Puesto -->
  <!-- Experiencia en procesos -->
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-list-alt fa-fw"></i></span>
    <%= f.select(:process_experience, [['No', 1], ['Menos de 1 año', 2], ['Menos de 3 años', 3], ['Más de 3 años', 4], ],
    {:prompt => "Experiencia en el uso de procesos:"}, {class: "form-control"}) %>
  </div>


  <!-- Numero de empleados -->
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-users fa-fw"></i></span>
    <%= f.number_field :employees_number, class: 'form-control', :placeholder => 'Núm. de empleados' %>
  </div>

  <!-- Numero de empleados -->
  <div class="input-group">
    <span class="input-group-addon"> <b> Muestra:</b></span>
    <input type="text" id="sample-size" class="form-control" readonly style="background-color:#f6f6f6;">
  </div>

  <div class="actions">
  <%= f.submit stext, class:'btn btn-primary' %>
  </div>
<% end %>
