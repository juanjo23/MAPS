<% if @current_user_practice.nil? %>
  <div class="questions-finished">
    <h2 class="modal-title">Cuestionario terminado</h2>
    <p> Termina el digrama y presiona Guardar </p>
    <a href="/done" class="btn btn-primary"> Guardar diagrama </a>        
  </div>
<% else %>
  <% @practice = @current_user_practice.practice %>


  <h2 class="modal-title">Identificación de Prácticas</h2>
  <div class="row">
    <div class="col-md-8">
      <div class="question">
        <%= @practice.question %> <br>
      </div>
      <%= simple_format(@practice.examples) %>
    </div>

    <div class="col-md-4">
      <%= render 'form_answers' %>
    </div>

  </div>
<% end %>
