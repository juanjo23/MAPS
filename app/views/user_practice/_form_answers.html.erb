<%= form_for(@current_user_practice, remote: true, html: {id:"up_form" }) do |f| %>

  <div class="rd-btn"> <%= f.radio_button(:answer, 3, class:"radio") %> <%= f.label(:answer_3, "Sí") %> </div>
  <div class="rd-btn"> <%= f.radio_button(:answer, 2, class:"radio") %> <%= f.label(:answer_2, "No") %> </div>
  <div class="rd-btn"> <%= f.radio_button(:answer, 1, class:"radio") %> <%= f.label(:answer_1, "No sabe") %> </div>
  <div style="clear:both;"> </div>
  <div class="added-value-title" > Califica ésta práctica: </div>
  <%= rating_for @current_user_practice, "added_value",
    disable_after_rate: false,
    target: '#hintStars',
    cancel_place: 'right',
    cancel_hint: "Cancel this rating"
  %>
  <div id="hintStars" style="display:none;"
  ></div>

  <div class="mtop">

    <button type="button" class="btn btn-default" name="back">
      <i class="fa fa-chevron-left" aria-hidden="true"></i>
      Atrás
    </button>

    <button type="submit" class="btn btn-primary" name="back">
      Siguiente
      <i class="fa fa-chevron-right" aria-hidden="true"></i>
    </button>

  </div>
<% end %>
