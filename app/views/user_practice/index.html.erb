
<% if @finished %>
<h2 style="margin-top:100px;text-align:center;">
  Cuestionario terminado
</h2>

<% else %>

  <div class="row">
    <div class="col-md-7">
      <h2> Cuestionario </h2>
      <div class="question">
        <%= @practice.question %> <br>
      </div>
      <%=  simple_format(@practice.examples) %>
    </div>
    <div class="col-md-5">
      <%= render 'form_answers' %>
    </div>
  </div>
  <div class="row">

    <div class="col-md-5 col-md-offset-4">
      <%= link_to "Next" %>
    </div>
  </div>
<% end %>
