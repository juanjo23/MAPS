<div class="devise-forms">

  <h2 class="modal-title">Iniciar sesión</h2>

  <!-- alerts start-->
  <div style="<%= 'display:none' if notice.nil? and alert.nil? %>">
    <div class="alert alert-info">
      <%= notice %>
      <%= alert %>
    </div>
  </div>
  <!-- alerts end-->


  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <!-- Email -->
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-envelope fa-fw"></i></span>
      <%= f.email_field :email, autofocus: true, class: 'form-control', :placeholder => 'email@example.com' %>
    </div>

    <!-- Password -->
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-lock fa-fw"></i></span>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', :placeholder => 'Contraseña' %>
      <%= link_to "¿Olvidaste contraseña?", new_password_path(resource_name) , class: 'forgot'%>
    </div>


    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "Recuérdame" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Iniciar sesión",  class: 'btn btn-primary'  %>
    </div>
  <% end %>

  <div class="field">
    <%= link_to "Crear cuenta", new_registration_path(resource_name) %><br />
  </div>

</div>
