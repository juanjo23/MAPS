<div class="devise-forms">

  <h2 class="modal-title">Restablecer contrase√±a</h2>


  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-envelope fa-fw"></i></span>
      <%= f.email_field :email, autofocus: true, class: 'form-control', :placeholder => 'email@example.com' %>
    </div>

    <div class="actions">
      <%= f.submit "Enviarme instrucciones para restablecerla", class: 'btn btn-default'  %>
    </div>
  <% end %>

  <div class="field">
    <%= render "devise/shared/links" %>
  </div>

</div>
